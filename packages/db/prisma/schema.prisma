generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())
  username String 
  password String
  email String @unique
  createdAt DateTime @default(now())
  Rooms  Room[]
  shapes Shapes[]
}
model Room{
  id Int  @id @default(autoincrement())
  slug String
  adminid String
  admin User @relation(fields: [adminid],references: [id])
  shapes Shapes[]
}

model Shapes{
  id Int @id @default(autoincrement())
  type String
  data Json
  userId String
  roomid Int
  admin User @relation(fields: [userId],references: [id])
  userRoom Room @relation(fields: [roomid],references: [id])

}